<!DOCTYPE html>
<html ng-app="smartFridge">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Smart Fridge</title>

    <link href="~/Content/customStyles.css" rel="stylesheet" />
    <!--link href="~/Content/settingsStyles.css" rel="stylesheet" />
    <link href="~/Content/contactsStyles.css" rel="stylesheet" />
    <link href="~/Content/notificationStyles.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Content/icon.png" /-->

    <link href="~/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <link href="~/bower_components/lumx/dist/lumx.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/0.9.4/angular-material.min.css">
</head>
<body>

    <!-- Libraries -->
    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/bower_components/angular/angular.min.js"></script>
    <script src="~/bower_components/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/bower_components/lumx/dist/lumx.js"></script>
    <script src="~/bower_components/moment/moment.js"></script>
    <script src="~/bower_components/velocity/velocity.js"></script>
    <script src="~/bower_components/velocity/velocity.ui.js"></script>
    <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/restangular/1.3.1/restangular.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/controllers/homeCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/controllers/fridgeCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/services.js" type="text/javascript"></script>
    <!--
    <script src="~/Scripts/controllers/notificationsCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/controllers/settingsCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/controllers/contactsCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/controllers/mycontactsCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/controllers/addcontactCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/controllers/sentCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/controllers/recievedCtrl.js" type="text/javascript"></script>
    <script src="~/Scripts/services/filters.js" type="text/javascript"></script>
    <script src="~/Scripts/services/configs.js" type="text/javascript"></script>
    <script src="~/Scripts/services/directives.js" type="text/javascript"></script>
    -->

    @{
        var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
        string fridge = "", products = "";
        switch (controller)
        {
            case "Fridge":
                fridge = "btn--raised";
                break;
        }
    }

    <div class="header">
        <div class="logo-keeper">
            <div class="logo" ui-sref="events">
                <div class="korgie-title"><span class="korgie-title-text">smartFridge</span></div>
            </div>
        </div>
        <nav class="container" ng-controller="HomeCtrl">
            <div class="navicons" layout-align="end start" layout-gt-sm="row">
                <div class="email"><span class="fs-subhead display-block">Log out</span></div>
                <div><button class="btn btn--m btn--teal btn--icon" lx-ripple type="button" onclick="location.href='@Url.Action("Index", "Home", new { isSignOut = true})'"><i class="mdi mdi-logout"></i></button></div>
            </div>
            <div layout="row" layout-align-md="end end">
                <div class="menu" flex="70" flex-sm="100" flex-md="100">
                    <ul class="nav">
                        <li><button class="btn btn--m btn--teal @fridge" lx-ripple>fridge</button></li>
                        <li><button class="btn btn--m btn--teal @products" lx-ripple>products</button></li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    @RenderBody()

</body>
</html>
